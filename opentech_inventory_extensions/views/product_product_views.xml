<odoo>
    <record id="view_product_product_tree_inherit_stock_icon" model="ir.ui.view">
        <field name="name">product.product.tree.stock.moves.icon</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_template_variant_value_ids']" position="after">
                <button name="action_view_stock_moves"
                    type="object"
                    class="btn btn-link fa fa-list"
                    title="Ver movimientos"/>
            </xpath>
            <xpath expr="//field[@name='default_code']" position="after">
                <button name="action_open_sales_wizard"
                    type="object"
                    icon="fa-info-circle"
                    class="btn btn-link btn-sm"
                    title="Ver información del producto"/>
            </xpath>
        </field>
    </record>

    <record id="view_product_product_kanban_inherit_stock" model="ir.ui.view">
        <field name="name">product.product.kanban.stock</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_kanban_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lst_price']" position="after">
                <br/>
                <span>Disponible: <field name="qty_available"/></span>
                <br/>
                <field name="last_sale_of_month"/>
                <br/>
            </xpath>
            <xpath expr="//field[@name='name']" position="after">
                <button name="action_open_sales_wizard"
                        type="object"
                        icon="fa-info-circle"
                        class="btn btn-link btn-sm"
                        title="Ver información del producto"/>
            </xpath>
        </field>
    </record>
</odoo>
