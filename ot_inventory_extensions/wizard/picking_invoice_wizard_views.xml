<odoo>
    <record id="view_picking_invoice_wizard_form" model="ir.ui.view">
        <field name="name">picking.invoice.wizard.form</field>
        <field name="model">picking.invoice.wizard</field>
        <field name="arch" type="xml">
            <form string="Crear Factura">
                <group>
                    <field name="advance_payment_method" class="oe_inline" widget="radio" />
                </group>
                <footer>
                    <button name="action_confirm"
                            string="Confirmar"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancelar" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_picking_invoice_wizard" model="ir.actions.act_window">
        <field name="name">Crear Factura</field>
        <field name="res_model">picking.invoice.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
