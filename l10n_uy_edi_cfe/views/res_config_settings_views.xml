<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="res_edi_config_settings_view_form">
        <field name="name">res.config.settings.view.form.inherit.l10n_uy_edi_cfe</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='analytic']" position="after">
                <block title="Electronic Invoice Provider" id="analytic">
                    <setting string="CFE" company_dependent="1" >
                        <div class="mt8">
                            <button name="action_cfe_config_wizard" icon="fa-arrow-right" type="object" string="Configure Wizard" class="btn-link"/>
                        </div>
                    </setting>
                </block>

            </xpath>
            <xpath expr="//form" position="inside">
                <app string="Limpieza de archivos" name="clean_attachments" >
                    <block title="Dias de antiguedad" name="days_to_clean_block">
                        <setting id="days_to_clean">
                            <div class="content-group">
                                <div class="mt8">
                                    <field name="days_to_clean"/>
                                </div>
                            </div>
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>

</odoo>
